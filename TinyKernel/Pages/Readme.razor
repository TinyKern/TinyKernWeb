@page "/readme"
@inject HttpClient HttpClient
@*@inject Blazor.Analytics.IAnalytics Analytics*@

<Title Value="TinyKernel - README"></Title>

@((MarkupString)markdownDoc)

@code {

  //protected override void OnInitialized()
  //{
